#!/bin/bash

echo "### Starting initialization..."
AWS_REGION="${REGION}"
AWS_BUCKET="${BUCKET}"
HF_TOKEN="${HF_TOKEN}"

echo "### AWS region $AWS_REGION"
echo "### Bucket $AWS_BUCKET"

git clone https://github.com/habanoz/c4_fineweb_tr_aws.git
cd c4_fineweb_tr_aws

echo "### Running the script!"
chmod +x run_writer.sh
./run_writer.sh "$AWS_BUCKET" "$HF_TOKEN"

echo "### Terminating the instance"
chmod +x terminate_instance.sh
./terminate_instance.sh "$AWS_REGION"
